@model string

@{
    ViewBag.Title = "Your Email Address is Unverified";
}

<div class="row">
    <div class="column">
        <h2>@ViewBag.Title</h2>
    </div>
</div>

<div class="row panel">
    <div class="row">
        <div class="medium-centered">
            <h3 class="text-center">You <strong>must</strong> confirm your email address before you can log in.</h3>
        </div>
    </div>

    <div class="row">
        <div class="small-center">
            <p class="text-center">
                Click the button below if you want use to re-send the confirmation email to you.
            </p>
        </div>
    </div>

    <div class="row">
        <div class="small-10 small-centered medium-6 medium-centered columns">
            @using (Html.BeginForm("ResendConfirmationEmail", "Account", FormMethod.Post, new { role = "form" }))
            {
                @Html.AntiForgeryToken()

                @Html.Hidden("emailAddress", Model)

                <button type="submit" class="large expand">Re-send confirmation email</button>
            }
        </div>
    </div>
</div>