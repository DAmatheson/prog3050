@model IEnumerable<Veil.DataModels.Models.MemberCreditCard>

@{
    ViewBag.Title = "Billing Information";
}

<div class="row">
    <div class="column">
        <h2>@ViewBag.Title</h2>
    </div>
</div>

<!-- TODO: Make inputs look nice, current layout is very rough
Keep consistent with ShippingInfo.cshtml -->

<div class="row panel">
    <div class="column">
        <h4>Your Credit Cards</h4>
        <select>
            <option>************2834</option>
            <option>************3129</option>
        </select>
        @Html.ActionLink("Use This Card", "ConfirmOrder", null, new { @class = "button right" })
    </div>
</div>

<div class="row panel">
    <div class="column">
        <h4>Billing Information</h4>

        <div class="row collapse">
            <div class="small-4 large-3 columns">
                <span class="prefix">Street Address</span>
            </div>
            <div class="small-8 large-9 columns">
                <input type="text"/>
            </div>
        </div>
        <div class="row collapse">
            <div class="small-4 large-3 columns">
                <span class="prefix">City</span>
            </div>
            <div class="small-8 large-9 columns">
                <input type="text"/>
            </div>
        </div>
        <div class="row collapse">
            <div class="small-4 large-3 columns">
                <span class="prefix">Country</span>
            </div>
            <div class="small-8 large-9 columns">
                <select>
                    <option>Canada</option>
                    <option>United States</option>
                </select>
            </div>
        </div>
        <div class="row collapse">
            <div class="small-4 large-3 columns">
                <span class="prefix">Province/State</span>
            </div>
            <div class="small-8 large-9 columns">
                <select>
                    <option>Alberta</option>
                    <option>British Columbia</option>
                    <option>Manitoba</option>
                    <option>New Brunswick</option>
                    <option>Newfoundland &amp; Labrador</option>
                    <option>Ontario</option>
                    <option>Prince Edward Island</option>
                    <option>Quebec</option>
                    <option>Saskatchewan</option>
                    <option>Northwest Territories</option>
                    <option>Nunavut</option>
                    <option>Yukon</option>
                </select>
            </div>
        </div>
        <div class="row collapse">
            <div class="small-4 large-3 columns">
                <span class="prefix">Postal Code</span>
            </div>
            <div class="small-8 large-9 columns">
                <input type="text"/>
            </div>
        </div>

        <h4>Credit Card Information</h4>

        <div class="row collapse">
            <div class="small-4 large-3 columns">
                <span class="prefix">Cardholder's Full Name</span>
            </div>
            <div class="small-8 large-9 columns">
                <input type="text"/>
            </div>
        </div>
        <div class="row collapse">
            <div class="small-4 large-3 columns">
                <span class="prefix">Card Number</span>
            </div>
            <div class="small-8 large-9 columns">
                <input type="text"/>
            </div>
        </div>
        <div class="row collapse">
            <div class="small-4 large-3 columns">
                <span class="prefix">Expiry Date</span>
            </div>
            <div class="small-4 large-9 columns">
                <div class="row">
                    <div class="small-6 columns">
                        <select>
                            <option>01</option>
                            <option>02</option>
                            <option>03</option>
                            <option>04</option>
                            <option>05</option>
                            <option>06</option>
                            <option>07</option>
                            <option>08</option>
                            <option>09</option>
                            <option>10</option>
                            <option>11</option>
                            <option>12</option>
                        </select>
                    </div>
                    <div class="small-6 columns">
                        <select>
                            <option>2015</option>
                            <option>2016</option>
                            <option>2017</option>
                            <option>2018</option>
                            <option>2019</option>
                            <option>2020</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="small-4 columns"></div>
        </div>
        <div class="row collapse">
            <div class="small-4 large-3 columns">
                <span class="prefix">CVC Number</span>
            </div>
            <div class="small-8 large-9 columns">
                <input type="text" maxlength="3"/>
            </div>
        </div>

        @Html.ActionLink("Use This Card", "ConfirmOrder", null , new { @class = "button right" })

    </div>
</div>