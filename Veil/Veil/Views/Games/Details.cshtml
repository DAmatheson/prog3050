@model Veil.DataModels.Models.Game

@{
    ViewBag.Title = "Game Title";
}

<div class="row">
    <div class="small-12 columns">
        <h2>@ViewBag.Title</h2>
    </div>
</div>
<div class="row">
    <div class="small-6 columns">
        <img src="http://cdn.akamai.steamstatic.com/steam/apps/240760/header.jpg?t=1444719694" alt="Game Image" />
    </div>
    <div class="small-2 columns">
        <img class="right" src="data:image/png;base64," alt="ESRB"/>
        <button class="small">Add to Wishlist</button>
    </div>
    <div class="small-4 columns">
        <p><strong>Developer: </strong>Teamossum</p>
        <p><strong>Publisher: </strong>Teamossum &amp; Co.</p>
        <p><strong>Release Date: </strong>April 22, 2018</p>
        <h4>Tags</h4>
        <ul class="inline-list">
            <li><a href="#" class="button secondary tiny">Action</a></li>
            <li><a href="#" class="button secondary tiny">Post-apocalypse</a></li>
            <li><a href="#" class="button secondary tiny">Adventure</a></li>
            <li><a href="#" class="button secondary tiny">6 More...</a></li>
        </ul>
    </div>
</div>
<div class="row">
    <div class="column">
        <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Quasi iusto reprehenderit voluptatem odio deleniti provident aliquam qui magnam aspernatur necessitatibus.</p>
    </div>
</div>

<div class="row panel">
    <div class="small-1 columns">
        <h4 style="transform:rotate(-90deg) translateX(-100%)">PS4</h4>
    </div>
    <div class="small-2 columns">
        <img src="http://pre00.deviantart.net/6211/th/pre/i/2012/101/f/f/wasteland_2_game_case_design_by_imagifysoftworks-d4vseyo.jpg" alt="Box Art" />
    </div>
    <div class="small-5 columns">
        <p>Game Description</p>
    </div>
    <div class="small-3 columns">
        <button class="expand">Buy New $50</button>
        <button class="expand success">Buy Used $30</button>
        <p>Average Rating: 5.0</p>
    </div>
</div>
<div class="row panel">
    <div class="small-1 columns">
        <h4 style="transform:rotate(-90deg) translateX(-150%);">Xbox&nbsp;One</h4>
    </div>
    <div class="small-2 columns">
        <img src="http://pre00.deviantart.net/6211/th/pre/i/2012/101/f/f/wasteland_2_game_case_design_by_imagifysoftworks-d4vseyo.jpg" alt="Box Art" />
    </div>
    <div class="small-5 columns">
        <p>Game Description</p>
    </div>
    <div class="small-3 columns">
        <button class="expand">Buy New $50</button>
        <button class="expand success">Buy Used $30</button>
        <p>Average Rating: 5.0</p>
    </div>
</div>
<div class="row panel">
    <div class="small-1 columns">
        <h4 style="transform:rotate(-90deg) translateX(-150%)">Windows</h4>
    </div>
    <div class="small-2 columns">
        <img src="http://pre00.deviantart.net/6211/th/pre/i/2012/101/f/f/wasteland_2_game_case_design_by_imagifysoftworks-d4vseyo.jpg" alt="Box Art" />
    </div>
    <div class="small-5 columns">
        <p>Game Description</p>
    </div>
    <div class="small-3 columns">
        <button class="expand">Buy New $50</button>
        <button class="expand success">Buy Used $30</button>
        <p>Average Rating: 5.0</p>
    </div>
</div>


<div class="row">
    <div class="small-12 columns">
        <h3>Ratings and Reviews</h3>
    </div>
</div>
<div class="row panel">
    <div class="column">
        <h4>Rate the Game</h4>
        <input type="radio" name="rating" value="1"><label>1</label>
        <input type="radio" name="rating" value="2"><label>2</label>
        <input type="radio" name="rating" value="3"><label>3</label>
        <input type="radio" name="rating" value="4"><label>4</label>
        <input type="radio" name="rating" value="5"><label>5</label>
        <textarea>Write stuff here</textarea>
        <button class="right" type="submit">Submit Rating</button>
    </div>
</div>

<div class="row">
    <div class="columns">
        <span>Filter Reviews by Format</span>
        <select>
            <option>PS4</option>
            <option>Xbox One</option>
            <option>Windows</option>
        </select>
        <button type="submit">Apply Filter</button>
    </div>
</div>

<div class="row panel">
    <div class="small-3 columns">
        <h5>xXxSepirothxXx</h5>
        <p>Played it on: PS4</p>
        <p>Rating: 3.0</p>
    </div>
    <div class="small-9 columns">
        <p><em>This review has been flagged as inappropriate.</em></p>
    </div>
</div>

<div class="row">
    <div class="small 1 column">
        <p>
            @Html.ActionLink("Back to Game List", "Index")
        </p>
    </div>
</div>


