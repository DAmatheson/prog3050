@model Veil.Models.CompanyViewModel

@{
    ViewBag.Title = "Manage Companies";
}

<div class="row">
    <div class="column">
        <h2>@ViewBag.Title</h2>

        @using (Html.BeginForm("Create", "Companies", FormMethod.Post))
        {
            <div class="row collapse">
                <div class="medium-3 columns">
                    @Html.LabelFor(m => m.NewCompany, new { @class = "prefix" } )
                </div>
                <div class="small-8 medium-6 columns">
                    @Html.EditorFor(m => m.NewCompany)
                    @Html.ValidationMessageFor(m => m.NewCompany)
                </div>
                <div class="small-4 medium-3 end columns">
                    <button type="submit" class="expand postfix">Save</button>
                </div>
            </div>
        }

        @using (Html.BeginForm("Delete", "Companies", FormMethod.Post))
        {
            <div class="row panel collapse">
                <div class="row">
                    <div class="column">
                        The companies listed have no related products and can be removed.
                    </div>
                </div>

                <div class="row collapse">
                    <div class="medium-3 columns">
                        <label for="deleteDropdown" class="prefix">Removable Companies</label>
                    </div>

                    <div class="small-8 medium-6 columns">
                        <select name="toDelete" id="deleteDropdown">
                            @foreach (var item in Model.Deletable)
                            {
                                <option value="@item.Value">@item.Text</option>
                            }
                        </select>
                    </div>
                    <div class="small-4 medium-3 end columns">
                        <button type="submit" class="expand postfix alert">Delete</button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>