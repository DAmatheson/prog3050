@model IEnumerable<Veil.DataModels.Models.Product>

@{
    ViewBag.Title = "Wishlist";
}

<h2>@ViewBag.Title</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.BoxArtImageURL)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NewWebPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UsedWebPrice)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.BoxArtImageURL)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NewWebPrice)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UsedWebPrice)
        </td>
        <td>
            @Html.ActionLink("Remove", "Remove", new { id=item.Id })
        </td>
    </tr>
}

</table>
