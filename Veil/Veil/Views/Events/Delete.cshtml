@model Veil.DataModels.Models.Event

@{
    ViewBag.Title = "Delete Event";
}

<div class="row">
    <div class="columns">
        <h2>Delete "@Model.Name"</h2>
    </div>
</div>

<div class="row">
    <div class="columns">
        <h3>Are you sure you want to delete this event?</h3>
        <hr/>

        <div class="row">
            <div class="medium-8 columns">
                <strong>@Html.DisplayNameFor(m => m.Description)</strong>
                <p>@Model.Description</p>
            </div>
            <div class="medium-4 columns">
                @{ Html.RenderPartial("_EventDetailsSidePanel", Model); }
            </div>
        </div>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                @Html.ActionLink("Cancel", "Details", new { Id = Model.Id }, new { @class = "button"})

                <button type="submit" class="alert right">Delete</button>
            </div>
        }
    </div>
</div>