@using Veil.Extensions
@model IEnumerable<Veil.DataModels.Models.WebOrder>

@{
    ViewBag.Title = "Order History";
}

<div class="row">
    <div class="column">
        <h2>@ViewBag.Title</h2>
    </div>
</div>

<div class="row">
    <div class="column">
        <table style="width:100%;">
            <tr>
                <th>Order Number</th>
                <th>Order Placed</th>
                <th>Status</th>
                <th>Order Processed</th>
                <th class="text-right">Order Total</th>
                <td></td>
            </tr>
            @if (!Model.Any())
            {
                <tr>
                    <td colspan="5">
                        You haven't ordered anything yet.
                    </td>
                </tr>
            }
            else
            {
                foreach (var item in Model)
                 {
                     <tr>
                         <td>@item.Id</td>
                         <td>@item.OrderDate</td>
                         <td>@Html.DisplayFor(m => item.OrderStatus)</td>
                         @if (item.ProcessedDate != null)
                         {
                            <td>@item.ProcessedDate.Value</td>
                         }
                         else
                         {
                             <td>Not Processed</td>
                         }
                         <td class="text-right">@((item.OrderSubtotal + item.ShippingCost + item.TaxAmount).ToString("C"))</td>
                         <td>
                             @Html.ActionLink("Order Details", "Details", new {id = item.Id})
                         </td>
                     </tr>
                 }
            }
        </table>
    </div>
</div>