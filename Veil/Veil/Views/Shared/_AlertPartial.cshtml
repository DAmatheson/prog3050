@using Veil.Helpers
@{
    IEnumerable<AlertMessage> alertMessages = TempData["AlertMessages"] as IEnumerable<AlertMessage> ?? new List<AlertMessage>();
}

@if (alertMessages.Any())
{
    <section>
        @foreach (var alert in alertMessages.OrderBy(a => a.Type))
        {
            <div class="row">
                <div class="column">
                    <div data-alert class="alert-box margin-bottom-0 @alert.AlertClass">
                        @alert.Message
                        <a href="#" class="close">&times;</a>
                    </div>
                </div>
            </div>
        }
    </section>
}