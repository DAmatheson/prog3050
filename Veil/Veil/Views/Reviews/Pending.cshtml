@using Veil.DataModels.Models
@model List<Veil.DataModels.Models.GameReview>

@{
    ViewBag.Title = "Process Reviews";
}

<div class="row">
    <div class="columns">
        <h2>@ViewBag.Title</h2>

        @foreach (var review in Model)
        {
            <div class="row panel">
                <div class="row" data-equalizer>
                    <div class="medium-4 large-3 column">
                        <div class="panel" data-equalizer-watch>
                            <p>
                                <strong>SKU:</strong><br/>
                                @review.ProductReviewed.Name
                            </p>
                        </div>
                    </div>
                    <div class="medium-8 large-9 columns">
                        <div class="panel" style="background: white;" data-equalizer-watch>
                            <span>@review.ReviewText</span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="columns medium-6">@Html.ActionLink("Approve", "Approve", "Reviews", new { memberId = review.MemberId, productReviewedId = review.ProductReviewedId }, new {@class = "button success expand"})</div>
                    <div class="columns medium-6">@Html.ActionLink("Deny", "Deny", "Reviews", new { memberId = review.MemberId, productReviewedId = review.ProductReviewedId }, new {@class = "button alert expand"})</div>
                </div>
            </div>
            <br/>
        }
    </div>
</div>